<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="10" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.privatemoviecollection.GUI.Controller.AddCategoryWindowController">
    <Label text="Add a Category" textFill="WHITE" />
    <TextField fx:id="categoryField" promptText="Category" style="-fx-background-color: white; -fx-background-radius: 10;" />
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="addCategoryButton" onAction="#handleSubmit" prefHeight="40" prefWidth="100" style="-fx-background-color: white; -fx-background-radius: 10; -fx-text-fill: black;" text="Add" />
        <Button fx:id="cancelButton" onAction="#handleCancel" prefHeight="40" prefWidth="100" style="-fx-background-color: white; -fx-background-radius: 10; -fx-text-fill: black;" text="Cancel" />
    </HBox>
</VBox>