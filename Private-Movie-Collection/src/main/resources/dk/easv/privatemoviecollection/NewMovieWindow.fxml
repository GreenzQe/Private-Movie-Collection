<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="417.0" prefWidth="486.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.privatemoviecollection.GUI.Controller.NewMovieWindowController" style="-fx-background-color: grey;">
    <Label text="Add a Movie" textFill="WHITE" />
    <TextField fx:id="movieNameField" promptText="Movie Name" style="-fx-background-color: white; -fx-background-radius: 10;" />
    <TextField fx:id="genreField" promptText="Genre" style="-fx-background-color: white; -fx-background-radius: 10;" />
    <TextField fx:id="durationField" promptText="Duration" style="-fx-background-color: white; -fx-background-radius: 10;" />
    <TextField fx:id="lastOpenedField" promptText="Last Opened" style="-fx-background-color: white; -fx-background-radius: 10;" />
    <TextField fx:id="ratingField" promptText="Rating" style="-fx-background-color: white; -fx-background-radius: 10;" />
    <TextField fx:id="fileLocationField" promptText="File Location" style="-fx-background-color: white; -fx-background-radius: 10;" />
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="addMovieButton" onAction="#handleSubmit" text="Add" style="-fx-background-color: white; -fx-background-radius: 10; -fx-text-fill: black;" prefWidth="100" prefHeight="40" />
        <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" style="-fx-background-color: white; -fx-background-radius: 10; -fx-text-fill: black;" prefWidth="100" prefHeight="40" />
    </HBox>
</VBox>